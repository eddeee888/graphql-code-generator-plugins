type Query
type Mutation

interface Error {
  # eslint-disable-next-line @graphql-eslint/no-typename-prefix
  error: ErrorType!
}

type StandardError implements Error {
  error: ErrorType!
}

enum ErrorType {
  NOT_FOUND
  INPUT_VALIDATION_ERROR
  FORBIDDEN_ERROR
  UNEXPECTED_ERROR
}

input PaginationInput {
  recordsPerPage: Int
  page: Int
}

type PaginationResult {
  currentPage: Int!
  recordsPerPage: Int!
  totalPageCount: Int!
}

scalar DateTime
